# Electrs Docker Config

# Docker User
DOCKER_USER="<my-docker-user>"

# Electrs Version
TAG="v0.9.14"

# Display Banner
BANNER="⚡ Docker Electrs Server (${TAG}) ⚡"

# Host Data Directories
HOST_BITCOIN_DIR="<my-bitcoin-data-dir>"
HOST_ELECTRS_DIR="<my-electrs-data-dir>"

# Bitcoin Node
BTC_ADDR="192.168.x.x" # use IP instead of "localhost".
BTC_RPC_PORT="8332"
BTC_P2P_PORT="8333"

# Electrs Server
HOST_ADDR="0.0.0.0"
HOST_PORT="50001"
DB_DIR="/data/db"
DAEMON_DIR="/data/.bitcoin"

